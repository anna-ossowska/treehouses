<%# No navbar here. Its in the layots %>

<%# The Carousel in the banner%>
<div class = "banner-gray">

  <div class="container w-50">
    <div class="carousel" style="margin-bottom:-80px">
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="https://source.unsplash.com/random/400x200" class="d-block w-100" alt="this is an example of a treehouse">
              </div>
              <div class="carousel-item">
                <img src="https://source.unsplash.com/random/400x200" class="d-block w-100" alt="this is an example of a treehouse">
              </div>
              <div class="carousel-item">
                <img src="https://source.unsplash.com/random/400x200" class="d-block w-100" alt="this is an example of a treehouse ">
              </div>
          </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
      </div>
    </div>
  </div>
</div>

<%# Here are the content of the page with the cards and booking %>

  <%# left card %>

  <div class="midpage d-flex flex-row justify-content-around px-5" style="background-color: #f4f4f4; padding-top: 120px; padding-bottom:120px" >
       <div class="info-card" style = "height: 700px; width: 750px;">
          <div class="top d-flex justify-content-between align-items-start" style= "background-color: white; border-bottom: 1px solid lightgrey; padding: 50px;">

             <div>
                <p style="color: #119358;"><%= @treehouse.name.capitalize %></p>
                <p><%= @treehouse.address %></p>
                <p><%= @treehouse.capacity %> guests | <%= @treehouse.beds %> beds </p>
              </div>
                 <%= image_tag "https://source.unsplash.com/random/300x150", class: "avatar avatar-large"%>
              </div>

           <div class="content" style="background-color:white; height: 500px;">
              <p style="padding: 50px;">
                <%= @treehouse.description %>
              </p>
        </div>
      </div>

    <%# right card %>

     <div class="booking-card p-5" style="text-align: center">
        <p style="font-weight: bold"><%= @treehouse.price_per_night %> NOK / night </p>
         <div class="container" style="margin: 0 auto;">
          <%= simple_form_for([@treehouse, @booking]) do |f| %>
            <%= f.input :check_in, as: :string, required: false, wrapper: false, label: false, placeholder: "Check in date", input_html: {class: "datepicker"} %>
            <br>
            <%= f.input :check_out, as: :string, required: false, wrapper: false, label: false, placeholder: "Check out date", input_html: {class: "datepicker"} %>
            <br>
            <%= f.input :number_of_guests, wrapper: false, label: false, as: :integer, placeholder: "Number of guests" %>
            <br>
            <%= f.submit 'Confirm Booking', class:"button-main"%>
          <% end %>
      </div>
  </div>
</div>


<%# no footer here, it comes from the layouts %>
